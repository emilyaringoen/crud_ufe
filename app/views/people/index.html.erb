<p id="notice"><%= notice %></p>

<h1>Address Book</h1>
<h2>Friends</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Occupation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td class="addressRow"><%= person.name %></td>
        <td class="addressRow"><%= person.address %></td>
        <td class="addressRow"><%= person.phone %></td>
        <td class="addressRow"><%= person.occupation.title %></td>
        <td class="btnSide"><%= link_to 'Show', person %></td>
        <td class="btnSide"><%= link_to 'Edit', edit_person_path(person) %></td>
        <td class="btnSide"><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

